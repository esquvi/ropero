{
  "name": "ropero",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean",
    "postinstall": "test -L node_modules/expo-router || ln -s ../apps/mobile/node_modules/expo-router node_modules/expo-router"
  },
  "devDependencies": {
    "turbo": "^2"
  },
  "packageManager": "npm@10.9.0",
  "overrides": {
    "@types/react": "19.1.17"
  }
}
